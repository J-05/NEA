<Button>
	font_size: 10
	color: 0.6, 1, 0.7, 1
	size_hint: 0.5, 0.5

#parent tag
<FloatLayout>
	Button:
		pos_hint: {"x":0.5, "top":1}
		text: "hello" 

	Button:
		id:button2
		pos_hint: {"x":0.5, "bottom":1}
		text: "again" if button2.state == "normal" else "Down"
		background_color: 0.3, 0.3, 0.3 if button2.state == "normal"